<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="441dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnUserInput"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignBaseline="@+id/btnSumValues"
            android:layout_alignBottom="@+id/btnSumValues"
            android:text="Grocery List" />
 
        <Button
            android:id="@+id/btnSumValues"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignBaseline="@+id/btnObject"
            android:layout_alignBottom="@+id/btnObject"
            android:layout_centerHorizontal="true"
            android:text="Barcode Scanner" />

    </LinearLayout>

</ScrollView>